<apex:page readOnly="true"
           standardController="OdenDeCompra__c"   
           applyHtmlTag="false"    
           sidebar="false"    
           showHeader="false"    
           cache="true"    
           renderAs="advanced_pdf"
           docType="html-5.0">
           <head>    
            <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />    
            <style type="text/css" media="print">
                @page {
                size: A4 Portrait;    
                /* border: 1px solid black;     */
                padding-left: 1px;    
                padding-right: 1px;   
                @bottom-left {
                    content: element(footer);
                }
    
                @bottom-left{
                    content: element(footer, last);
                        }  
                }
                th {  
                font-weight: bold;
                text-align: center;
                background-color: #92d5f0;
                color: black;
                padding: 8px;
                font-size: 13px;
                }
                td {    
                font-size: 12px;
                text-align: left;
                padding: 8px;
                }
                table{
                border-collapse: collapse;
                }
                table, th, td {
                border: 1px solid black;
                }
                .right {
                    position: absolute;
                    right: 0px;
                    width: 300px;
                    padding: 1px;
                    }
                    .left {
                    position: absolute;
                    left: 0px;
                    width: 320px;
                    padding: 1px;
                    padding-bottom: 50px 
                    }
                    div.footer {
                position: running(footer);
                font-size: small;
                color: gray;
            }
            </style>    
        </head>     
<center>    
    <h3>Orden de compra {!OdenDeCompra__c.Name}</h3>    
</center>    
<table width="100%">    
    <tr>
        <th>Cadena</th>    
        <th>Formato</th>
        <th>Producto</th>
        <th>Sitio</th>
        <th>Medida</th>
        <th>Arte</th>
        <th>Cantidad</th>
        <th>Tarifa</th> 
        <th>Total</th>
    </tr>    
    <apex:repeat value="{!OdenDeCompra__c.Lineas_Ordenes_de_Compra__r}" var="child">    
        <tr>                
            <td>{!child.Cadena__r.Name}</td>  
            <td>{!child.Formato__r.Name}</td> 
            <td>{!child.Medio__r.Producto__r.Name}</td> 
            <td>{!child.Medio__r.Sitio__r.Name}</td> 
            <td>{!child.Medida__r.Name}</td> 
            <td>{!child.Arte__r.Name}</td> 
            <td>{!child.Cantidad__c}</td> 
            <td>{!child.Tarifa__c}</td> 
            <td>{!child.Total__c}</td> 
        </tr>    
    </apex:repeat>    
</table> 
    <br></br>
    <br></br>
    <br></br>
    <br></br>
    <br></br>
    <div class="footer">

    </div>
</apex:page>